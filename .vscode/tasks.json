{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gradlew",
    "isShellCommand": true,
    "args": [
        "bootRun"
    ],
    "showOutput": "always",
    "problemMatcher": {
        "owner": "external",
        "fileLocation": [
            "absolute"
        ],
        "pattern": [
            {
                "regexp": "^(.+\\.java):(\\d):(?:\\s+(error)):(?:\\s+(.*))$",
                "file": 1,
                "location": 2,
                "severity": 3,
                "message": 4
            }
        ]
    }
}